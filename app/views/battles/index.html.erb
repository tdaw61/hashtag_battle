<h1>Battles:</h1>

<table>
  <thead>
    <tr>
      <th>Battle Name</th>
      <th>#1</th>
      <th>#2</th>
      <th>Time start</th>
      <th>Time end</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @battles.each do |battle| %>
      <tr>
        <td><%= battle.name %></td>
        <td><%= battle.tag_one %></td>
        <td><%= battle.tag_two %></td>
        <td><%= battle.time_start %></td>
        <td><%= battle.time_end %></td>
        <td><%= link_to 'Show', battle %></td>
        <td><%= link_to 'Edit', edit_battle_path(battle) %></td>
        <td><%= link_to 'Destroy', battle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Battle', new_battle_path %>

