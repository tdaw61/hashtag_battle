<%= form_for(@battle) do |f| %>
  <% if @battle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@battle.errors.count, "error") %> prohibited this battle from being saved:</h2>

      <ul>
      <% @battle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :time_start %><br>
    <%= f.date_select :time_start %>
  </div>
  <div class="field">
    <%= f.label :time_end %><br>
    <%= f.date_select :time_end %>
  </div>

    <div class="field">
        <%= f.fields_for :hashtags do |hashtag_fields| %>
                <%= hashtag_fields.label :content , "# name" %>
                <%= hashtag_fields.text_field :content %><br>
        <% end %>
    </div>
  <div class="actions">
    <%= f.submit "Add another #" , :name => "add_hashtag" %>
    <%= f.submit %>
  </div>
<% end %>
